        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="text-white mt-5 mb-5">Welcome !!</p>
                </div>
            </div>
            <!-- row -->
            <div class="row tm-content-row">
                <div class="col-12 tm-block-col">
                    <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                        <h2 class="tm-block-title">Discord Bot Logs</h2>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ORDER NO.</th>
                                    <th scope="col">KAYNAK</th>
                                    <th scope="col">DATE</th>
                                    <th scope="col">LOG</th>
                                    <th scope="col">LINK</th>
                                </tr>
                            </thead>
                            <tbody>
                              @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"><b>#@item.OrderNo</b></th>
                                        <td>@item.TypeLink</td>
                                        <td>@item.DateTime</td>
                                        <td>@item.Log</td>
                                        <td><a href="@item.Link" class="tm-notification-link">@item.TypeLink</a></td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

